<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.yongming.activity">

    <!--权限设置-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Activity 设置-->

        <activity android:name="com.example.yongming.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".UITestActivity" />
        <activity android:name=".UITest.UITestNineActivity" />
        <activity android:name=".UITest.UIFragmentTestActivity" />
        <activity android:name=".BroadCastTestActivity" />
        <activity android:name=".DataTestActivity" />
        <activity android:name=".ShareDataTestActivity" />
        <activity android:name=".ContentProviderTest.ContactListActivity" />
        <activity android:name=".ContentProviderTest.ContentProviderTestActivity" />


        <!--
        注意事项:
        其它进程访问，务必要设置exported=true
        -->
        <provider
            android:authorities="com.example.yongming.kai.provider"
            android:name=".ContentProviderTest.MyContentProvider"
            android:exported="true">

        </provider>

    </application>




</manifest>