<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/data_test_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please input something..."/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/data_test_edit_sharedpreferences"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Shared Preferences"/>


        <Button
            android:id="@+id/data_test_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入测试"/>

        <Button
            android:id="@+id/data_test_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读取测试"/>

    </LinearLayout>

    <EditText
        android:id="@+id/data_test_edit_sqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SQLite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/data_test_create_database"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="创建库"/>

        <Button
            android:id="@+id/data_test_insert_sql"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="增"/>

        <Button
            android:id="@+id/data_test_del_sql"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删"/>

        <Button
            android:id="@+id/data_test_query_sql"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查"/>

        <Button
            android:id="@+id/data_test_update_sql"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="改"/>

    </LinearLayout>



</LinearLayout>